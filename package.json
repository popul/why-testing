{
  "name": "why-testing",
  "version": "1.0.0",
  "description": "Why developers need unit tests ?",
  "main": "index.js",
  "scripts": {
    "test": "NODE_ENV=test mocha-webpack --webpack-config webpack.config.test.js --recursive 'src/**/*.test.js'",
    "test:junit": "npm test -- --reporter mocha-junit-reporter",
    "test:coverage:report": "nyc report --reporter=lcov",
    "test:coverage": "nyc npm test && npm run test:coverage:report",
    "test:coverage:serve": "browser-sync start -s 'coverage/lcov-report' -f 'coverage/lcov-report' --port 8082",
    "test:coverage:open": " parallelshell 'npm run test:coverage:report:watch' 'npm run test:coverage:serve'",
    "test:coverage:report:watch": "chokidar --initial 'src/**/*' -c 'npm run test:coverage'",
    "test:watch": "chokidar --initial 'src/**/*' -c 'npm test 2>/dev/null'",
    "test:debug": "NODE_ENV=test_browser webpack-dev-server --config ./webpack.config.test.browser.js --inline",
    "start": "webpack-dev-server --progress --colors --hot --host 0.0.0.0",
    "build": "rimraf dist && NODE_ENV=production webpack --progress --colors -p",
    "serve": "NODE_ENV=production webpack-dev-server --progress --colors -p --host 0.0.0.0"
  },
  "author": "Paul Musso <paul.musso@outlook.com>",
  "license": "MIT",
  "devDependencies": {
    "angular-hot-reloader": "0.0.2",
    "angular-mocks": "^1.5.8",
    "babel": "^6.5.2",
    "babel-core": "^6.17.0",
    "babel-loader": "^6.2.5",
    "babel-plugin-__coverage__": "^11.0.0",
    "babel-plugin-istanbul": "^2.0.1",
    "babel-preset-stage-1": "^6.16.0",
    "babel-register": "^6.16.3",
    "browser-sync": "^2.17.2",
    "chai": "^3.5.0",
    "chokidar-cli": "^1.2.0",
    "css-loader": "^0.25.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.9.0",
    "ghooks": "^1.3.2",
    "html-webpack-plugin": "^2.22.0",
    "jsdom": "^9.6.0",
    "mocha": "^3.1.0",
    "mocha-junit-reporter": "^1.12.0",
    "mocha-loader": "^1.0.0",
    "mocha-webpack": "^0.6.0",
    "ng-annotate-loader": "^0.2.0",
    "npm-install-webpack-plugin": "^4.0.4",
    "nyc": "^8.3.0",
    "raw-loader": "^0.5.1",
    "rimraf": "^2.5.4",
    "script-loader": "^0.7.0",
    "sinon": "git://github.com/cjohansen/Sinon.JS#v2.0.0-pre.2",
    "style-loader": "^0.13.1",
    "url-loader": "^0.5.7",
    "watch": "^0.19.2",
    "webpack": "^1.13.2",
    "webpack-dev-server": "^1.16.1",
    "webpack-hot-middleware": "^2.12.2",
    "webpack-node-externals": "^1.4.3"
  },
  "dependencies": {
    "angular": "^1.5.8",
    "angular-animate": "^1.5.8",
    "angular-aria": "^1.5.8",
    "angular-material": "^1.1.1",
    "babel-preset-es2015": "^6.16.0",
    "bootstrap-css-only": "^3.3.6",
    "jquery": "^3.1.1",
    "ng-redux": "^3.4.0-beta.1",
    "normalize.css": "^4.2.0",
    "redux": "^3.6.0",
    "redux-actions": "^0.12.0",
    "redux-saga": "^0.12.0"
  },
  "nyc": {
    "sourceMap": false,
    "instrument": false
  },
  "ghooks": {
      "pre-commit": "npm test"
  }
}
